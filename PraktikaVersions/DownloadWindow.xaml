<Window x:Class="PraktikaVersions.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PraktikaVersions"
        mc:Ignorable="d"
        Title="Downloading" Height="150" Width="400"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Name="TagNameTextBox"  Text="Загрузка обновления: " FontWeight="Bold"/>
            <TextBlock Name="NoteTextBox" Margin="0 5 0 0" FontStyle="Italic"/>
        </StackPanel>

        <ProgressBar Grid.Row="1" Name="ProgressBar" Width="370" Margin="5"/>
    </Grid>
</Window>
